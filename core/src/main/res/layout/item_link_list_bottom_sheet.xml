<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/core_bg_item_video_list">

    <TextView
        android:id="@+id/item_link_list_quality_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/san_francisco_bold"
        android:text="@string/item_link_quality_list"
        android:textColor="#333333"/>

    <TextView
        android:id="@+id/item_link_list_size_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_link_list_quality_txt"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="18dp"
        android:fontFamily="@font/san_francisco_regular"
        android:text="65.44 MB"
        android:textColor="#333333"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/item_link_list_download_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:padding="9dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:foregroundGravity="center"
        android:background="@drawable/core_bg_item_video_list"
        android:src="@drawable/core_bottom_sheet_download_black_imv"/>

</RelativeLayout>