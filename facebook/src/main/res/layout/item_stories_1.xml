<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_story_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_selector"
    android:orientation="vertical"
    android:padding="6dp">

    <androidx.cardview.widget.CardView
        style="@style/MyCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_story_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <com.tapi.download.video.core.view.CircleImageView
                android:id="@+id/item_story_profile_iv"
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </RelativeLayout>

        <TextView
            android:gravity="center"
            android:id="@+id/item_story_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="12dp"
            android:ellipsize="end"
            android:fontFamily="@font/san_francisco_medium"
            android:paddingRight="18dp"
            android:singleLine="true"
            android:text="aaaaa"
            android:textColor="#fff"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>